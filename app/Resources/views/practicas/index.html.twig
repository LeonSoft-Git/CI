    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'CI','submenu':'Practicas'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.js') }}"></script><script>
    $(document).ready(function(){
        $('#myTable').DataTable();
    });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Practicas</h3>
               {#<p class="text-muted m-b-30">{{ Practicas</p>#}
                <table id="myTable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>No.</th> <th>Nombre</th> <th>Apellidos</th> <th>Curso</th> <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for practica in practicas %}
                    <tr>
                        <td><a href="{{ path('practicas_show', { 'id': practica.id }) }}">{{ practica.id }}</a></td>    <td>{{ practica.nombre }}</td>                                <td>{{ practica.apaterno }} {{ practica.amaterno }}</td>      <td>{{ practica.cursos.grupos }}-{{ practica.cursos.fecha|date('Y-m-d') }}</td>                     <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="{{ path('practicas_show', { 'id': practica.id }) }}" data-toggle="tooltip" title="Ver" class="btn btn-default"><i class="fa fa-list-ul"></i></a>
                                    </div>
                                </td>
                    </tr>
                    {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endblock %}
