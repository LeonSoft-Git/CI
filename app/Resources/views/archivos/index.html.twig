    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'CI','submenu':'Archivos'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.js') }}"></script><script>
    $(document).ready(function(){
        $('#myTable').DataTable();
    });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Archivos</h3> <p>Contrase√±a: <strong>{{ pass }}</strong></p>
               {#<p class="text-muted m-b-30">{{ Archivos</p>#}
                <table id="myTable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>No.</th>  <th>Nombre</th> <th>Tipo</th> <th>Empresa</th> <th>Activo</th> <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for archivo in archivos %}
                    <tr>
                        <td><a href="{{ path('archivos_show', { 'id': archivo.id }) }}">{{ archivo.id }}</a></td> <td>{{ archivo.nombre }}</td>  <td>{{ archivo.tipo|tipoArc }}</td> <td>{{ archivo.empresas.nombre }}</td> <td>{{ archivo.activo|sino }}</td>  <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="{{ path('archivos_show', { 'id': archivo.id }) }}" data-toggle="tooltip" title="Ver" class="btn btn-default"><i class="fa fa-list-ul"></i></a>
                                        {% if app.user.tipo == 1 or app.user.tipo == 2 %}
                                            <a href="{{ path('archivos_edit', { 'id': archivo.id }) }}" data-toggle="tooltip" title="Editar" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                        {% endif %}
                                    </div>
                                </td>
                    </tr>
                    {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endblock %}
