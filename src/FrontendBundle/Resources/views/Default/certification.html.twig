{% extends '@Frontend/layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/common.css') }}">
{% endblock %}

{%  block opengraph %}
    <meta property="og:type" content="website" />
    <meta property="og:title" content="CI | Certificaciones" />
    <meta property="og:description" content="CI es una empresa comprometida. en ofrecer tanto a las instituciones
