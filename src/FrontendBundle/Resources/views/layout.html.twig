<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {% block metas %}{% endblock %}
    <meta property="og:url" content="{{ absolute_url(path(app.request.attributes.get('_route'),app.request.attributes.get('_route_params'))) }}"/>
    <meta property="og:locale" content="es_MX">
    <meta property="og:type" content="website"/>
    <meta property="og:site_name" content="Capacitación Informática">
    <meta property="fb:app_id" content="559694107725736">
    <meta property="fb:pages" content="1912917198991493">

    {% block opengraph %}{% endblock %}

    <title>{% block title %}CI{% endblock %}</title>
    <link rel="shortcut icon" href="{{ asset('assets/img/icon_ci_32x32.png') }}">
    <meta name="theme-color" content="#072331">

    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:400,300|Raleway:300,400,900,700italic,700,300,600">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/font-awesome.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/animate.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/flag-icon-more.min.css') }}">
    {% block stylesheets %}{% endblock %}

    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-113152243-1', 'auto');
        ga('send', 'pageview');
    </script>
</head>
<body>
<div id="myDiv">
    <!--HEADER-->
    <div class="header" style="background: url('{% block background %}{% endblock %}') no-repeat fixed;">
        <div class="bg-color" >
            <header id="main-header">
                <ul class="dropdown language">
                    <a class="btn btn-secondary dropdown-toggle" type="button" id="language" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Language
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" href="" data-language="es"><span class="flag-icon flag-icon-mx"></span> Español</a></li>
                        <li><a class="dropdown-item" href="" data-language="en"><span class="flag-icon flag-icon-gb"></span> English</a></li>
                    </div>
                </ul>
                <nav class="navbar navbar-default navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="{{ path('homepage') }}"><img src="{{ asset('assets/img/logo_ci_white.png') }}" height="60"></a>
                        </div>
                        <div class="collapse navbar-collapse" id="myNavbar">
                            <ul class="nav navbar-nav navbar-right">
                                <li class="{% block inicio %}{% endblock %}"><a href="{{ path('homepage') }}">{{ 'menu.inicio'|trans }}</a></li>
                                <li class="{% block acerca %}{% endblock %}"><a href="{{ path('about') }}">{{ 'menu.acerca'|trans }}</a></li>
                                <li class="{% block servicios %}{% endblock %} dropdown">
                                    <a class="dropdown-toggle" data-close-others="false" data-delay="0" data-hover=
                                    "dropdown" data-toggle="dropdown" href="#">{{ 'menu.servicios'|trans }} <i class="fa fa-angle-down"></i>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a href="{{ path('capacitation') }}">{{ 'menu.servicios.capacitaciones'|trans }}</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('developer') }}">{{ 'menu.servicios.desarrollo'|trans }}</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('certification') }}">{{ 'menu.servicios.certificaciones'|trans }}</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('sell') }}">{{ 'menu.servicios.venta'|trans }}</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('maintenance') }}">{{ 'menu.servicios.mantenimiento'|trans }}</a>
                                        </li>
                                    </ul>
                                </li>
                                <li class="{% block contacto %}{% endblock %}"><a href="{{ path('contact') }}">{{ 'menu.contacto'|trans }}</a></li>
                                <li class="redes">
                                    <ul class="social">
                                        <li> <a href="https://www.facebook.com/CapacitacionInformaticaMX/" target="_blank"><i class="fa fa-facebook"></i></a></li>
                                        {#<li> <a href="#"> <i class="fa fa-twitter">   </i> </a> </li>
                                        <li> <a href="#"> <i class="fa fa-google-plus">   </i> </a> </li>
                                        <li> <a href="#"> <i class="fa fa-pinterest">   </i> </a> </li>
                                        <li> <a href="#"> <i class="fa fa-youtube">   </i> </a> </li>#}
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>

            <div class="container">
                <div class="row">
                    {% block body %}
                    {% endblock %}
                </div>
            </div>
            {% block footerDentro %}
            {% endblock %}
        </div>
    </div>
    {% block section %}
    {% endblock %}
    {% block footerFuera %}
    {% endblock %}
</div>

<script src="{{ asset('assets/js/jquery.min.js') }}"></script>
<script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
<script src="{{ asset('assets/js/jquery.rotator.js') }}"></script>
<script src="{{ asset('assets/js/wow.js') }}"></script>
<script src="{{ asset('assets/js/custom.js') }}"></script>
{% block javascript %}{% endblock %}
<script>
    $(document).ready(function () {
        {% if app.request.locale=='es' %}
            $('#language').html('<span class="flag-icon flag-icon-mx"></span> Español');
        {% elseif app.request.locale=='en' %}
            $('#language').html('<span class="flag-icon flag-icon-gb"></span> English');
        {% endif %}
        $('.language li a').click(function (e) {
            e.preventDefault();
            var language = $(this).attr('data-language');
            var current = "{{ app.request.locale }}";
            var url = "{{ app.request.uri }}";
            url = url.replace("/"+current+"/","/"+language+"/");
            window.location = url;
        });
    });
</script>
</body>
</html>