{% extends '@Frontend/layout.html.twig' %}

{% block background %}{{ asset('assets/img/images2.jpg') }}{% endblock %}

{% block title %}{{ 'about.title'|trans }} | {{ parent() }}{% endblock %}

{%  block opengraph %}
    <meta property="og:type" content="website" />
    <meta property="og:title" content="CI | Acerca De" />
    <meta property="og:description" content="Somos una empresa que proporciona soluciones informáticas de capacitación
    y entrenamiento en informática a cualquier nivel dentro de las organizaciones; además ofrece Desarrollo Web de Calidad y Venta de Equipo de Cómputo y Consumibles." />
    <meta property="og:image" content="{{ absolute_url(asset('assets/img/logo_ci_facebook.png')) }}" />
    <meta property="keywords" content="capacitacion informatica,capacitacion,informatica,excel,desarrollo web,certificacion,certificaciones,equipo de computo,computo,consumibles,venta,acerca">
    <meta property="description" content="Somos una empresa que proporciona soluciones informáticas de capacitación
    y entrenamiento en informática a cualquier nivel dentro de las organizaciones; además ofrece Desarrollo Web de Calidad y Venta de Equipo de Cómputo y Consumibles.">
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/common.css') }}">
{% endblock %}

{% block acerca %}active{% endblock %}

{% block body %}
    <div class="banner-info">
        <div class="row text-center espaciotop">
            <h1>{{ 'about.quienes'|trans }} <strong>{{ 'about.somos'|trans }}</strong></h1>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="wrap-item text-center">
                    <div id="rotate-demo3" class="rotate" data-rotate-interval="6000" data-rotate-animate="zoomIn,zoomOut">
                        <h1 class="demo1">{{ 'about.empresa'|trans }} <strong><span class="rotate-arena"></span></strong></h1>
                        <ul>
                            <li><strong class="text-danger">{{ 'about.empresa.1'|trans }}</strong></li>
                            <li><strong class="text-danger">{{ 'about.empresa.2'|trans }}</strong></li>
                            <li><strong class="text-danger">{{ 'about.empresa.3'|trans }}</strong></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block section %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h1 class="text-center">Capacitación Informática</h1>
                    <hr>
                </div>

                <div class="col-xs-12 col-md-6">
                    <p class="text-justify">{{ 'about.descripcion1'|trans }}</p>
                    <p class="text-justify">{{ 'about.descripcion2'|trans }}</p>
                    <p class="text-justify">{{ 'about.descripcion3'|trans }}</p>
                </div>
                <div class="col-md-6 hidden-xs hidden-sm">
                    <img src="{{ asset('assets/img/icon_ci.png') }}" class="img-responsive img-center" alt="Logo Capacitacion Informatica" width="60%">
                </div>
            </div>
        </div>
        <hr>
    </section>
{% endblock %}

{% block footerFuera %}
    <footer id="footer">
        <div class="container">
            <div class="row text-center">
                <p>&copy; CI - {{ 'index.derechos'|trans }}</p>
                <p>
                    <a href="https://capacitacioninformatica.com/webmail" target="_blank"><i class="fa fa-id-card-o"></i></a>
                    <a href="{{ path('admin_home') }}" target="_blank"><i class="fa fa-lock" style="margin-left: 25px;"></i></a>
                </p>
                <div class="credits">
                    {{ 'index.diseño'|trans }} <a href="https://capacitacioninformatica.com/">CI</a>
                </div>
            </div>
        </div>
    </footer>
{% endblock %}